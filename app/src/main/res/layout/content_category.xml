                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/pump"
                    android:onClick="onCatClick"
                    android:padding="10dp"
                    android:tag="15"
                    android:text="Petrol pump"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/textback"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/courier"
                    android:onClick="onCatClick"
                    android:padding="10dp"
                    android:tag="16"
                    android:text="Courier"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/textback"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/book"
                    android:onClick="onCatClick"
                    android:padding="10dp"
                    android:tag="17"
                    android:text="Book store"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/textback"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/farm"
                    android:onClick="onCatClick"
                    android:padding="10dp"
                    android:tag="18"
                    android:text="Poultry farm"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/textback"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/popular"
                    android:onClick="onCatClick"
                    android:padding="10dp"
                    android:tag="12"
                    android:text="Popular"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

